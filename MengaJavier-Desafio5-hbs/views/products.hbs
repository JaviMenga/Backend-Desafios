<main>
    <h1 class="mt-1 text-center">All products</h1>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Image</th>
                            {{!-- <th>Actions</th> --}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <td>{{title}}</td>
                            <td>{{price}}</td>
                            <td><img src="{{thumbnail}}" alt="{{title}}" width="100"></td>
                            {{!-- <td>
                                <a href="{{url}}" class="btn btn-primary">View</a>
                                <a href="{{url}}/edit" class="btn btn-warning">Edit</a>
                                <a href="{{url}}/delete" class="btn btn-danger">Delete</a>
                            </td> --}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {{#unless products}}
        <h1 class="red">No products found</h1>
    {{/unless}}
</main>


